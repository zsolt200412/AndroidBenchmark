<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#f5f5f5">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Android Benchmark"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="24dp"
        android:textColor="#333333" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- CPU Benchmark Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="CPU Benchmark"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#333333" />

                    <TextView
                        android:id="@+id/cpuScoreText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Score: Running..."
                        android:textSize="16sp"
                        android:layout_marginTop="8dp"
                        android:textColor="#666666" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Memory Benchmark Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Memory Benchmark"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#333333" />

                    <TextView
                        android:id="@+id/memoryScoreText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Score: Running..."
                        android:textSize="16sp"
                        android:layout_marginTop="8dp"
                        android:textColor="#666666" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- GPU Benchmark Card with Visual Display -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="GPU Benchmark"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#333333" />

                    <TextView
                        android:id="@+id/gpuScoreText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Score: Running..."
                        android:textSize="16sp"
                        android:layout_marginTop="8dp"
                        android:textColor="#666666" />

                    <!-- GPU Visual Display Area -->
                    <FrameLayout
                        android:id="@+id/gpuDisplayContainer"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginTop="12dp"
                        android:background="#000000"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/gpuStatusText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="GPU Benchmark Running..."
                            android:textColor="#ffffff"
                            android:textSize="14sp" />

                    </FrameLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Control Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <Button
                    android:id="@+id/runBenchmarkButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Run Benchmarks"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="#4CAF50" />

                <Button
                    android:id="@+id/showGpuButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Show GPU Test"
                    android:layout_marginStart="8dp"
                    android:backgroundTint="#2196F3" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>